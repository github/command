{
  "name": "command",
  "version": "0.0.0",
  "private": true,
  "description": "IssueOps commands in GitHub Actions",
  "main": "lib/main.js",
  "scripts": {
    "format": "prettier --write '**/*.js'",
    "format-check": "prettier --check '**/*.js'",
    "lint": "eslint src/**/*.js",
    "package": "ncc build src/main.js -o dist --source-map --license licenses.txt",
    "test": "(COMMAND_ACTION_JEST_TEST=true jest && make-coverage-badge --output-path ./badges/coverage.svg) || make-coverage-badge --output-path ./badges/coverage.svg",
    "ci-test": "COMMAND_ACTION_JEST_TEST=true jest",
    "all": "npm run format && npm run lint && npm run package",
    "bundle": "npm run format && npm run package"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/github/command.git"
  },
  "keywords": [
    "actions",
    "issueops",
    "github"
  ],
  "author": "Grant Birkinbine",
  "license": "MIT",
  "dependencies": {
    "@actions/core": "^3.0.0",
    "@actions/github": "^9.0.0",
    "@octokit/plugin-retry": "^6.0.1",
    "@octokit/request": "^10.0.6",
    "dedent-js": "^1.0.1",
    "github-username-regex-js": "^1.0.0",
    "@octokit/rest": "^22.0.1"
  },
  "jest": {
    "coverageReporters": [
      "json-summary",
      "text",
      "lcov"
    ],
    "collectCoverage": true,
    "collectCoverageFrom": [
      "./src/**"
    ],
    "coverageThreshold": {
      "global": {
        "lines": 100
      }
    }
  },
  "devDependencies": {
    "@babel/plugin-transform-modules-commonjs": "^7.28.6",
    "@babel/preset-env": "^7.29.0",
    "@types/node": "^25.1.0",
    "@vercel/ncc": "^0.38.4",
    "@babel/core": "^7.29.0",
    "babel-jest": "^30.2.0",
    "eslint": "^8.57.0",
    "eslint-plugin-jest": "^29.12.1",
    "jest": "^30.2.0",
    "js-yaml": "^4.1.0",
    "make-coverage-badge": "^1.2.0",
    "prettier": "^3.8.1"
  }
}
